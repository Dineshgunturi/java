public class Solution {

    public int[][] matrixBlockSum(int[][] mat, int k) {
        int m = mat.length;
        int n = mat[0].length;

        // Prefix sum matrix
        int[][] prefix = new int[m + 1][n + 1];

        // Build prefix sum
        for (int i = 1; i <= m; i++) {
            for (int j = 1; j <= n; j++) {
                prefix[i][j] = mat[i - 1][j - 1]
                             + prefix[i - 1][j]
                             + prefix[i][j - 1]
                             - prefix[i - 1][j - 1];
            }
        }

        int[][] answer = new int[m][n];

        // Calculate block sum for each cell
        for (int i = 0; i < m; i++) {
            for (int j = 0; j < n; j++) {

                int r1 = Math.max(0, i - k);
                int c1 = Math.max(0, j - k);
                int r2 = Math.min(m - 1, i + k);
                int c2 = Math.min(n - 1, j + k);

                // Convert to prefix indices (+1)
                answer[i][j] = prefix[r2 + 1][c2 + 1]
                             - prefix[r1][c2 + 1]
                             - prefix[r2 + 1][c1]
                             + prefix[r1][c1];
            }
        }

        return answer;
    }

    // Optional main method for local testing
    public static void main(String[] args) {
        Solution sol = new Solution();

        int[][] mat = {
            {1, 2, 3},
            {4, 5, 6},
            {7, 8, 9}
        };

        int k = 1;
        int[][] result = sol.matrixBlockSum(mat, k);

        for (int[] row : result) {
            for (int val : row) {
                System.out.print(val + " ");
            }
            System.out.println();
        }
    }
}
